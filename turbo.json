{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalEnv": [
        "NODE_ENV",
        "CI",
        "GITHUB_TOKEN",
        "NPM_TOKEN",
        "GITBOOK_TOKEN",
        "GITBOOK_ENDPOINT",
        "GITBOOK_ORGANIZATION",
        "UNFURL_GITHUB_CLIENT_ID",
        "UNFURL_GITHUB_CLIENT_SECRET",
        "GITLAB_CLIENT_ID",
        "GITLAB_CLIENT_SECRET",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "DISCORD_BOT_TOKEN",
        "SLACK_CLIENT_ID",
        "SLACK_CLIENT_SECRET",
        "SLACK_SIGNING_SECRET",
        "FIGMA_CLIENT_ID",
        "FIGMA_CLIENT_SECRET",
        "MAILCHIMP_CLIENT_ID",
        "MAILCHIMP_CLIENT_SECRET",
        "JIRA_CLIENT_ID",
        "JIRA_CLIENT_SECRET",
        "LINEAR_CLIENT_ID",
        "LINEAR_CLIENT_SECRET",
        "SENTRY_CLIENT_ID",
        "SENTRY_CLIENT_SECRET",
        "SENTRY_GITBOOK_INTEGRATION",
        "GITHUB_APP_INSTALL_URL",
        "GITHUB_APP_ID",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "GITHUB_WEBHOOK_SECRET",
        "GITHUB_PRIVATE_KEY",
        "LUCID_CLIENT_ID",
        "LUCID_CLIENT_SECRET",
        "GITHUBCOPILOT_APP_ID",
        "GITHUBCOPILOT_APP_URL",
        "GITHUBCOPILOT_CLIENT_ID",
        "GITHUBCOPILOT_CLIENT_SECRET"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["src/**"],
            "outputs": ["dist/**"]
        },
        "api#build": {
            "cache": false,
            "inputs": [
                "tsconfig.json",
                "build.sh",
                "src/**",
                "templates/**",
                "../gitbook-x/packages/api-client/static/openapi.yaml"
            ],
            "outputs": ["dist/**", "spec/**"]
        },
        "test": {
            "dependsOn": ["build"]
        },
        "typecheck": {
            "dependsOn": ["build"],
            "outputs": []
        },
        "publish-integrations": {
            "dependsOn": ["build"],
            "outputs": [],
            "cache": false
        },
        "publish-integrations-staging": {
            "dependsOn": ["build"],
            "outputs": [],
            "cache": false
        },
        "check": {
            "dependsOn": ["build", "^build"],
            "inputs": ["src/**", "gitbook-manifest.yaml"],
            "outputs": [".gitbook/**"]
        }
    },
    "globalDependencies": [".env"]
}
