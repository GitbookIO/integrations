{
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["src/**"],
            "outputs": ["dist/**"]
        },
        "api#build": {
            "cache": false,
            "inputs": ["src/**"],
            "outputs": ["dist/**", "spec/**"]
        },
        "test": {
            "dependsOn": ["build"]
        },
        "lint": {
            "dependsOn": ["build"],
            "outputs": []
        },
        "typecheck": {
            "dependsOn": ["build"],
            "outputs": []
        },
        "publish-integrations": {
            "env": ["GITBOOK_TOKEN", "GITBOOK_ENDPOINT", "SLACK_CLIENT_ID", "SLACK_CLIENT_SECRET"],
            "dependsOn": ["build"],
            "outputs": [],
            "cache": false
        }
    }
}
