{
    "editor.tabSize": 4,
    "search.exclude": {
        // Exclude output directories
        "**/dist": true,
        "**/static": true,
        // Exclude installed dependencies from searches too
        "**/node_modules": true,
        // Exclude vendored yarn
        "**/.yarn": true
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.tsc.autoDetect": "off",
    "typescript.tsserver.trace": "off",
    "typescript.tsserver.log": "off",
    // Format using Prettier to format on save
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "svg.preview.background": "custom",
    "prettier.documentSelectors": ["{**/*,*}.{js,ts,jsx,tsx,md,mdx,yml,yaml,json,html,css}"]
}
